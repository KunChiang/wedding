/* pages/map/index.wxss */

.container {
  min-height: 100vh;
  background-size: cover;
}

.t1 {
  width: 626rpx;
  height: 180rpx;
  margin: 0 auto;
  display: block;
}

#map {
  width: 694rpx;
  height: 600rpx;
  margin: 0 auto;
  margin-bottom: 0rpx;
  margin-top: 0rpx;
  border: 3rpx solid rgba(0, 0, 0, 0.3);
}

.tel {
  width: 500rpx;
  margin: 0 auto;
  min-height: 0;
  overflow: hidden;
  text-align: center;
  font-size: 24rpx;
  color: #684c4b;
  line-height: 50rpx;
  z-index: 99999;
  padding-bottom: 50rpx;
}

.tel_he {
  width: 200rpx;
  float: left;
}

.tel_she {
  width: 200rpx;
  float: right;
}

.call {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}

.call image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.copyright {
  text-align: center;
  font-size: 20rpx;
  line-height: 25rpx;
  padding-bottom: 20rpx;
  color: #684c4b;
}

.sign_top {
  display: block;
  width: 700rpx;
  height: 79rpx;
  margin: 0 auto;
  margin-top: -50rpx;
  margin-bottom: -20rpx;
}

.msg_top {
  display: block;
  width: 500rpx;
  height: 177rpx;
  margin: 0 auto;
  margin-top: -130rpx;
  margin-bottom: 10rpx;
}
.cancel_msg {
  width: 180rpx;
  height: 100rpx;
  float: right;
  line-height: 100rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  background-image: linear-gradient(135deg, #feb692 0%, #ea5455 100%);
  box-shadow: 0 10rpx 20rpx -6rpx rgba(238, 103, 97, 0.5);
}
.sign_btn {
  position: relative;
  top: 0rpx;
  left: 200rpx;
  width: 350rpx;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  background-image: linear-gradient(135deg, #feb692 0%, #ea5455 100%);
  box-shadow: 0 10rpx 20rpx -6rpx rgba(238, 103, 97, 0.5);
}
.send_msg {
  width: 700rpx;
  padding: 25rpx;
  background-color: #fff;
  min-height: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #f1f1f1;
}

.send_ipt {
  width: 680rpx;
  padding: 15rpx;
  font-size: 32rpx;
  height: 200rpx;
  line-height: 60rpx;
  background-color: #f8f8f8;
  border-radius: 5px;
  margin-bottom: 20rpx;
}

.send_btn {
  width: 500rpx;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  float: left;
  background-image: linear-gradient(135deg, #feb692 0%, #ea5455 100%);
  box-shadow: 0 10rpx 20rpx -6rpx rgba(238, 103, 97, 0.5);
}


.form-label {
  min-height: 0;
  overflow: hidden;
  padding: 10rpx;
  font-size: 32rpx;
  z-index: 1024;
}

.form-tit {
  line-height: 60rpx;
  z-index: 1024;
}

.form-tit .must {
  color: red;
  z-index: 1024;
}

.form-ipt {
  color: #333;
  z-index: 1024;
}

.form-ipt .ipt {
  height: 60rpx;
  padding: 10rpx 20rpx;
  line-height: 60rpx;
  background-color: #f8f8f8;
  border-radius: 5rpx;
  z-index: 1024;
}

.form-ipt .textarea {
  height: 180rpx;
  padding: 20rpx;
  line-height: 60rpx;
  background-color: #f8f8f8;
  margin-bottom: 20rpx;
  z-index: 1024;
}

.radio-group {
  line-height: 80rpx;
}

.radio {
  /* margin-right: 50rpx; */
  display: block;
  width: 50%;
  float: left;
}

.form-btn {
  text-align: center;
  z-index: 1024;
}
